<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/radioImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorTransparent"
        android:src="@drawable/ic_radio" />

    <TextView
        android:id="@+id/radioTitleTextView"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:layout_height="wrap_content"

        android:text="@string/title"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/radioImage"
        android:layout_toEndOf="@+id/radioImage" />

    <RadioButton
        android:id="@+id/radioRadioButton"
        android:button="@drawable/material_radio_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:checked="true" />
</RelativeLayout>