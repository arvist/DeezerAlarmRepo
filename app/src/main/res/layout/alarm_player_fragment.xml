<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alarm_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="8dp">

        <TextView
            android:id="@+id/buttonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:paddingTop="8dp"
            android:text="Stop"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

    </android.support.v7.widget.CardView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/controlButton"
        android:layout_above="@+id/alarm_screen_button"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_av_pause"
        android:background="@color/colorTransparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextSongButton"
        android:layout_alignBottom="@+id/controlButton"
        android:layout_toRightOf="@+id/alarm_screen_button"
        android:layout_toEndOf="@+id/alarm_screen_button"
        android:src="@drawable/ic_av_skip_next"
        android:background="@color/colorTransparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prevSongButton"
        android:layout_alignBottom="@+id/controlButton"
        android:layout_toLeftOf="@+id/alarm_screen_button"
        android:layout_toStartOf="@+id/alarm_screen_button"
        android:src="@drawable/ic_av_skip_previous"
        android:background="@color/colorTransparent" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/controlButton"
        android:layout_alignRight="@+id/nextSongButton"
        android:layout_alignEnd="@+id/nextSongButton"
        android:layout_alignLeft="@+id/prevSongButton"
        android:layout_alignStart="@+id/prevSongButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistTextView"
        android:layout_above="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="20sp"
        android:id="@+id/songTextView"
        android:textColor="@color/colorPrimaryText"
        android:layout_above="@+id/artistTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:singleLine="true"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp" />


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/songImage"
        android:src="@drawable/ic_no_song_image"
        android:background="@drawable/e"
        android:paddingLeft="6px"
        android:paddingTop="4px"
        android:paddingRight="8px"
        android:paddingBottom="9px"
        android:layout_above="@+id/songTextView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>