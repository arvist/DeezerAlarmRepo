<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/artistImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="9dp"
        android:background="@color/colorTransparent"
        android:src="@drawable/ic_cancel"
        android:contentDescription="Image of Artist" />

    <TextView
        android:id="@+id/artistTextView"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/artistImage"
        android:layout_toRightOf="@+id/artistImage"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="@string/ArtistTextView"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp" />


    <RadioButton
        android:id="@+id/artistRadioButton"
        android:button="@drawable/material_radio_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:checked="true" />

</RelativeLayout>